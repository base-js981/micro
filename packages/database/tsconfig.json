{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2021",
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "index.ts",
    "data-source.ts",
    "seed.ts",
    "entities/**/*",
    "migrations/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}

