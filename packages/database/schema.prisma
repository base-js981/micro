// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Seed script configuration
// Run: pnpm run prisma:seed

model User {
  id               String             @id @default(cuid())
  email            String             @unique
  password         String
  name             String?
  roles            UserRole[]
  attributes       UserAttribute[]
  policyAssignments PolicyAssignment[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  deletedAt        DateTime?

  @@map("users")
}

model Role {
  id              String             @id @default(cuid())
  name            String             @unique
  description     String?
  permissions     RolePermission[]
  users           UserRole[]
  policyAssignments PolicyAssignment[]
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@map("roles")
}

model Permission {
  id          String         @id @default(cuid())
  name        String         @unique
  resource    String
  action      String
  description String?
  roles       RolePermission[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@unique([resource, action])
  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  roleId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

// ABAC (Attribute-Based Access Control) Models

model UserAttribute {
  id        String   @id @default(cuid())
  userId    String
  key       String   // e.g., "department", "location", "level", "team"
  value     String   // e.g., "engineering", "US", "senior", "backend"
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, key])
  @@map("user_attributes")
}

model Policy {
  id          String         @id @default(cuid())
  name        String         @unique
  description String?
  resource    String         // e.g., "users", "roles", "documents"
  action      String         // e.g., "read", "write", "delete"
  effect      String         @default("allow") // "allow" or "deny"
  rules       PolicyRule[]
  assignments PolicyAssignment[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@map("policies")
}

model PolicyRule {
  id          String   @id @default(cuid())
  policyId    String
  attribute   String   // e.g., "user.department", "user.level", "resource.owner", "environment.time"
  operator    String   // e.g., "equals", "notEquals", "in", "notIn", "greaterThan", "lessThan", "contains"
  value       String   // JSON string for complex values (arrays, objects)
  policy      Policy   @relation(fields: [policyId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("policy_rules")
}

model PolicyAssignment {
  id        String   @id @default(cuid())
  policyId  String
  roleId    String?  // If assigned to role
  userId    String?  // If assigned to user
  policy    Policy   @relation(fields: [policyId], references: [id], onDelete: Cascade)
  role      Role?    @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([policyId, roleId])
  @@unique([policyId, userId])
  @@map("policy_assignments")
}
